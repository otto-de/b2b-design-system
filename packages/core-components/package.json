{
  "name": "@otto-de/b2b-core-components",
  "version": "1.24.0",
  "description": "Core components defined with Stencil",
  "author": "Otto GmbH",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/otto-de/b2b-design-system"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/b2b-core-components/b2b-core-components.esm.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:icons && stencil build --docs",
    "build:icons": "node scripts/generate-icon-types.mjs",
    "start": "stencil build --dev --watch --serve --config stencil-dev.config.ts",
    "test": "stencil test --spec --e2e --maxWorkers=1",
    "test-ci": "stencil test --spec --e2e --ci",
    "test.watch": "stencil test --spec --e2e --watch",
    "generate": "stencil generate",
    "lint": "eslint \"src/**/*{.ts,.tsx}\" && stylelint \"src/**/*{.scss,.css}\"",
    "lint:fix": "eslint \"src/**/*{.ts,.tsx}\" --fix && stylelint \"src/**/*{.scss,.css}\" --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "copy-md-changelog": "copyfiles --flat ../../CHANGELOG.md src/docs/getting-started",
    "copy-md-guidelines": "copyfiles --flat ../../DEV-GUIDELINES.md src/docs/guidelines",
    "copy-md-files": "npm run copy-md-changelog && npm run copy-md-guidelines",
    "storybook": "npm run copy-md-files && storybook dev -p 6006",
    "build:storybook": "npm run copy-md-files && storybook build -o docs-build/design-system"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@otto-de/b2b-tokens": "1.24.0",
    "@stencil-community/eslint-plugin": "^0.10.0",
    "@stencil/core": "4.27.1",
    "globals": "^16.0.0"
  },
  "devDependencies": {
    "@asamuzakjp/css-color": "^3.1.1",
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@chromatic-com/storybook": "^3.2.4",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@stencil-community/postcss": "^2.2.0",
    "@stencil/react-output-target": "^0.5.3",
    "@stencil/sass": "^3.1.7",
    "@storybook/addon-actions": "^8.6.0",
    "@storybook/addon-docs": "^8.6.0",
    "@storybook/addon-essentials": "^8.6.0",
    "@storybook/addon-interactions": "^8.6.0",
    "@storybook/addon-links": "^8.6.0",
    "@storybook/addon-mdx-gfm": "^8.6.0",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.5",
    "@storybook/manager-api": "^8.6.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/preview-api": "^8.6.0",
    "@storybook/test": "^8.6.0",
    "@storybook/test-runner": "^0.22.0",
    "@storybook/theming": "^8.6.0",
    "@storybook/web-components": "^8.6.0",
    "@storybook/web-components-webpack5": "^8.6.0",
    "@types/jest": "^29.1.1",
    "@types/mdx": "^2.0.7",
    "@types/postcss-import": "^14.0.3",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-utils": "^3.0.0",
    "jest": "^29.1.1",
    "jest-cli": "^29.7.0",
    "jest-image-snapshot": "^6.1.0",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.2.2",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark-gfm": "^4.0.1",
    "sass": "^1.71.0",
    "sass-loader": "^16.0.5",
    "storybook": "^8.6.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^29.1.1",
    "tsutils": "^3.21.0",
    "typescript": "^4.9.4"
  }
}
